{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TTAWin",
  "version": "0.1.0",
  "identifier": "com.ttawin.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TTAWin Overlay",
        "fullscreen": true,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "center": true,
        "resizable": false,
        "minimizable": false,
        "maximizable": false,
        "closable": true,
        "acceptFirstMouse": false,
        "titleBarStyle": "Overlay",
        "url": "index.html",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
